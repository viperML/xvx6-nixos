# shxkdrc

# launch programs
super + Return
	kitty

super + r
	rofi -show run

super + Escape
	pkill -USR1 -x sxhkd

# berry configuration
super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {0-9}
    berryc send_to_workspace {0-9}

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + q
    berryc window_close

super + shift + q
    berryc quit

~button1
    berryc pointer_focus